<h4>ユーザー一覧</h4>
<div class="top-link"><%= link_to 'トップへ戻る', admin_home_top_path %></div>

<div class="row clearfix">
	<div class="col-lg-12">
		<div class="col-lg-2">
			<p><b>登録日時</b></p>
		</div>
		<div class="col-lg-2">
			<p><b>お名前</b></p>
		</div>
		<div class="col-lg-2">
			<p><b>メールアドレス</b></p>
		</div>
		<div class="col-lg-6">
			<p><b>住所</b></p>
		</div>
	</div>
</div>

<div class="row clearfix">
    <% @users.each do |user| %>
      <div class="admin-users clearfix">
      	<div class="admin-user col-lg-2 user-text">
      		<p><%= l user.created_at, format: :short %></p>
      	</div>
      	<div class="admin-user col-lg-2 user-text">
      		<p><%= user.last_name %> <%= user.first_name %></p>
      	</div>
      	<div class="admin-user col-lg-2 user-text">
      		<p><%= user.email %></p>
      	</div>
      	<div class="admin-user col-lg-2 user-text">
      		<p><%= link_to '登録住所一覧', admin_user_path(user) %></p>
      	</div>
      	<div class="admin-user col-lg-2 user-text">
      		<p><%= link_to '編集', edit_admin_user_path(user) %></p>
      	</div>
      	<div class="admin-user col-lg-2 user-text">
      		<p><%= link_to '削除', admin_user_path(user), method: :delete,  "data-confirm" => "本当に削除しますか？" %></p>
      	</div>
      </div>
	<% end %>
 </div>


<%= paginate @users, class: "paginate" %>