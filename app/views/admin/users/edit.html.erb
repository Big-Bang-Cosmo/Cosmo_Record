<h2><%= @user.last_name + @user.first_name %>さん編集ページ</h2>
<%= form_for(@user) do |f| %>

<p class="registrations-headline">お名前</p>
  <div class="field">
  <%= f.label :姓 %><br />
  <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>

  <p class="registrations-headline">お名前(カタカナ)</p>
  <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "name" %>
  </div>

     <div class="field">
          <%= f.fields_for :deliveries do |delivery| %>
            <%= render "delivery_fields", f: delivery %>
          <% end %>
        <div class="links">
          <%= link_to_add_association "配送先を追加", f, :deliveries %>
        </div>
     </div>

    <div class="actions">
    <%= f.submit "編集" %>
  </div>
<% end %>


