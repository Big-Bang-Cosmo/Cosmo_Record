<h3><%= @user.last_name + @user.first_name %>さん編集ページ</h3>

<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-6">

  <%= form_for(@user, url:admin_user_path, method: :patch ) do |f| %>

  <div>
    <p class="registrations-headline">【お名前】</p>
    <div class="field row">
      <div class="form col-lg-2">
          <%= f.label :姓 %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>

    <div class="field row">
      <div class="form col-lg-2">
        <%= f.label :名 %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>
  </div>

  <div>
    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :セイ %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>
  </div>

  <div>
    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :メイ %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>
  </div>

  <hr>


  <div>
    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :email %>
      </div>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
  </div>

  <div>
    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :電話番号 %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control" %>
      </div>
    </div>
  </div>

  <hr>

  <div>
    <div class="field row">
         <%= f.fields_for :deliveries do |delivery| %>
            <%= render "delivery_fields", f: delivery %>
         <% end %>
        <div class="links">
            <%= link_to_add_association "配送先を追加", f, :deliveries, class:"btn btn-default" %>
        </div>
    </div>
  </div>

  <hr>

  <div class="row">
      <div class="field">
        <%= f.label :password %> <i>(変更しない場合は空白のままにしてください)</i><br />
        <div class="form col-lg-8">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上で入力してください</em>
        <% end %>
       </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :password_confirmation %><i>（確認のため、もう一度入力してください）</i><br /><br/>
      <div class="form col-lg-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"%>
      </div>
    </div>
  </div>

    <div class="actions-user-edit">
      <%= f.submit "編集",class:"btn btn-primary" %>
    </div>
  <% end %>

  </div>

  <div class="col-lg-4"></div>

</div>
