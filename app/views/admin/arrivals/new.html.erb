<h4><%= @item.item_name %>/<%= @item.artist.artist_name %>の入荷枚数</h4>

<div class="arrival_quantity">
	<div>
	 <p><%= attachment_image_tag @item, :item_image, :fill, 150, 150, fallback: "no_image.jpg" %></p>
    </div>
    <div>
    	<p><%= @item.item_name %></p>
    </div>
    <div>
	 	<p><%= @item.artist.artist_name %></p>
    </div>
    <div>
	 	<p>価格(税抜):<%= number_to_currency(@item.price) %></p>
    </div>

    <div>
	<%= form_for(@arrival, url:admin_item_arrivals_path, method: :post) do |f| %>
			<label>入荷枚数</label>
			<br>
			<%= f.number_field :arrival_quantity,size:10, min:1 %>
			<%= f.submit %>
	<% end %>
   </div>
   <div class="back"><%= link_to "戻る", admin_item_path(@item.id) %></div>
</div>

