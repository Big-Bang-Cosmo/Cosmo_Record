<h4>入荷履歴</h4>
<div class="top-link"><%= link_to 'トップへ戻る', admin_home_top_path %></div>

<% @arrivals.each do |arrival| %>
	<div class="arrival clearfix">
		<div class="arrivai_item col-lg-2 text">
			<p>入荷日：<%= arrival.created_at.strftime('%Y/%m/%d') %></p>
		</div>
		<div class="arrivai_item col-lg-2 ">
		 	<p><%= link_to user_item_path(arrival.item.id) do %>
		 			<%= attachment_image_tag arrival.item, :item_image, :fill, 50, 50, fallback: "no_image.jpg" %></p>
		 		<% end %>
		 </div>
		<div class="arrivai_item col-lg-2 text">
		    <p><%= link_to arrival.item.item_name, admin_item_path(arrival.item.id) %></p>
		 </div>
		<div class="arrivai_item col-lg-2 text">
			<p><%= arrival.item.artist.artist_name %><p>
		</div>
		<div class="arrivai_item col-lg-2 text">
			<p>数量:<%= arrival.arrival_quantity %></p>
		</div>
		<div class="arrivai_item col-lg-2 text">
			<p>価格(税抜):<%= number_to_currency(arrival.item.price) %></p>
		</div>
	</div>
<% end %>