<h1>User::Items#show</h1>
<h1>Admin::Items#show</h1>

<%= attachment_image_tag @item, :item_image, size:"200x200", format:"jpeg", fallback: "no_image.jpag" %>
<div = item_box>
	<h1><%= item.name %></h1>

	<div = item_info>
		<%= item.artist_id.artist_name %>
		<%= item.genre_id.genre_name %>
		<%= item.label_id.label_name %>
	</div>

	<%= @tax_price %>

	<h3>販売中</h3>
	<h3>在庫数：<%= item.stock %></h3>
	<h3><%= link_to "商品を編集する", item_path(item.id) %></h3>
	<h3><%= link_to "消費を削除する", item_path(item.id) method: :delete %></h3>
</div>

<div class = "item_introduction">
	<h3>商品説明：</h3><br>
	<%= item.introduction %>
</div>
<div class = "item_songs">
	<table>
		<% item.discs.each |disc| do %>
			<%= disc.disc_number %>
			<td>
				<% disc.songs.each |song| do %>
				<%= song.song_number%><%= song.song_name %>
				<% end %>
			</td>
		<% end %>
	</table>
</div>
<h3>レビューフォーム</h3>
<%= form_for [@item, @review] do |f| %>
<%= f.text_area :review_body %>
<%= f.submit '送信' %>




