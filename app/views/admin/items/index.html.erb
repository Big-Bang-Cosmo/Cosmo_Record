
<h1>販売商品一覧</h1>

<% @items.each do |item| %>
	<table border="1">
			<tr>
				<td><%= link_to admin_item_path(item) do %>
					<%= attachment_image_tag item, :item_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
					<% end %>
				</td>
				<td><%= link_to "#{item.item_name}", admin_item_path(item) %></td></td>
				<td><%= item.artist.artist_name %></td>
				<td><p>価格（税抜）：</p><%= number_to_currency(item.price) %></td>
				<td><span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
				<%= item.favorites.count %></td>
			</tr>
	</table>
<% end %>

<%= paginate @items, class: "paginate" %>