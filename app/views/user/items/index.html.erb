<div class="container">

<h4>商品一覧</h4>

<div class="sidebar">
	<div class="genre-item">
		<p>ジャンル</p>
		<ul>
			<% @genres.each do |genre| %>
			<li><%= link_to "#{genre.genre_name}", user_genre_path(genre) %></li>
			<% end %>
		</ul>
	</div>
</div>

<div class="ranking">
	<div class="ranking-item">
		<p>売上ランキング</p>
		<ol>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ol>
	</div>
</div>

<% @items.each do |item| %>
	<table border="1">
			<tr>
				<td><%= link_to user_item_path(item) do %>
					<%= attachment_image_tag item, :item_image, :fill, 170, 170, fallback: "no_image.jpg", size:'170x170' %>
					<% end %>
				</td>
				<td><%= link_to "#{item.item_name}", user_item_path(item) %></td>
				<td><%= link_to "#{item.artist.artist_name}", user_artist_path(item.artist) %></td>
				<td><p>価格（税込）：¥</p><%= number_to_currency(item.price * 1.1) %></td>
                <td>
                	<% if user_signed_in? %>
						<% if item.favorited_by?(current_user) %>
						    <%= link_to user_item_favorites_path(item), method: :delete do %>
						      <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
						      <%= item.favorites.count %>
						    <% end %>
						<% else %>
						    <%= link_to user_item_favorites_path(item), method: :post do %>
						      <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
						      <%= item.favorites.count %>
						    <% end %>
						<% end %>
					<% else %>
						<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
				        <%= item.favorites.count %>
					<% end %>
                </td>
			</tr>
	</table>
<% end %>

<%= paginate @items, class: "paginate" %>

</div>


