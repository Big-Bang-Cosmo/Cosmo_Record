
<h1>商品一覧</h1>

<div class="sidebar">
	<div class="genre-item">
		<p>ジャンル</p>
		<ul>
			<% @genres.each do |genre| %>
			<li><%= genre.genre_name %></li>
			<% end %>
		</ul>
	</div>
</div>

<div class="ranking">
	<div class="ranking-item">
		<p>売上ランキング</p>
		<ol>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ol>
	</div>
</div>

<% @items.each do |item| %>
	<table border="1">
			<tr>
				<td><%= attachment_image_tag item, :item_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
				<td><%= item.item_name %></td>
				<td><%= item.artist.artist_name %></td>
				<td><p>価格（税込）：</p><%= (item.price * 1.1).floor %></td><!--(item.price * 1.1).floorで小数点切り捨て出来る-->
                <td>
                	<% if user_signed_in? %>
						<% if item.favorited_by?(current_user) %>
						    <%= link_to user_item_favorites_path(item), method: :delete do %>
						      <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
						      <%= item.favorites.count %>
						    <% end %>
						<% else %>
						    <%= link_to user_item_favorites_path(item), method: :post do %>
						      <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
						      <%= item.favorites.count %>
						    <% end %>
						<% end %>
					<% else %>
						<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
				        <%= item.favorites.count %>
					<% end %>
                </td>
			</tr>
	</table>
<% end %>

<%= paginate @items, class: "paginate" %>


