<h1>UserCartItemのページだよーん</h1>
<div class = "container" >
	<h1>ショッピングカート</h1>
	<% @total_price = 0 %>
	<% @cart_items.each do |cart_item| %>
		<%= attachment_image_tag cart_item.item, :item_image, :fill, 250, 250, fallback: "no_image.jpg" %>
		<%= link_to user_items_path(cart_item.item.id) do %>
			<%= cart_item.item.item_name %>
		<% end %>
		<%= cart_item.item.artist.artist_name %>
		<%= form_for(cart_item, url: user_cart_item_path(cart_item.id), method: :patch) do |f| %>
			<p>数量:
			<%= f.number_field :quantity, value: cart_item.quantity, min:1, max:item.stock %>
			<%= f.submit "数量変更" %>
		<% end %>
		</p>
		<%= link_to '削除', user_cart_item_path(cart_item.id), method: :delete %>
		<p>価格(税込)¥<%= number_to_currency(cart_item.item.price * cart_item.quantity.to_i * 1.1) %></p>
		<% @total_price += cart_item.item.price * cart_item.quantity.to_i * 1.1 %>
	<% end %>
		<h2>商品小計（税込）¥<%= number_to_currency(@total_price) %></h2>
		<%= link_to 'ショッピングを続ける', user_items_path %>
	<% if current_user.cart_items.present? %>
		<%= link_to '購入手続きに進む', user_orders_new_path(current_user.id) %>
	<% end %>
</div>
