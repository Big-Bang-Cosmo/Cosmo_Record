<h1>Userの注文詳細一覧</h1>
<div class = "container">
	<% @orders.each do |order| %>
		<h4><%= l order.created_at, format: :short %></h4>
			<% order.order_items.each do |order_item| %>
				<%= attachment_image_tag order_item.item, :item_image, :fill, 250, 250, fallback: "no_image.jpg" %>
				<h4>商品名:<%= order_item.item.item_name %></h4>
				<h5>アーティスト名:<%= order_item.item.artist.artist_name %></h5>
				<h5>価格(税込)<%= order_item.item.price %></h5>
				<h5>枚数:<%= order_item.quantity %></h5>
  			<% end %>
  		
  		<% if order.delivery_status == "商品準備中"  %>
			<%= button_to "商品準備中", {controller: 'admin/orders', action: 'update'}, {method: :patch} %>
  		<% else %>
			<%= button_to "出荷済み", {controller: 'admin/orders', action: 'update'}, {method: :patch} %>
  		<% end %>

  		<%= link_to admin_order_path(order.id) do %>
  			<p><%= l order.created_at, format: :short %>の購入詳細履歴</p>
  		<% end %>
	<% end %>
</div>

