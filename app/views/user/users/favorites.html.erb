
<h1><%= @user.last_name + @user.first_name %>さんのマイページ</h1>

<%= link_to "ユーザー情報の編集" %>
<%= link_to "マイレビュー一覧" %>
<%= link_to "購入履歴一覧" %>

<div class="sidebar">
	<div class="genre-item">
		<p>ジャンル</p>
		<ul>
			<% @genres.each do |genre| %>
			<li><%= link_to "#{genre.genre_name}", user_genre_path(genre) %></li>
			<% end %>
		</ul>
	</div>
</div>

<div class="ranking">
	<div class="ranking-item">
		<p>売上ランキング</p>
		<ol>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
			<li></li>
		</ol>
	</div>
</div>

<h4>お気に入り商品</h4>

<% @items.each do |favorite| %>
	<table border="1">
			<tr>
				<td><%= link_to user_item_path(favorite) do %>
					<%= attachment_image_tag favorite.item, :item_image, :fill, 170, 170, fallback: "no_image.jpg", size:'170x170' %>
					<% end %>
			    </td>
				<td><%= link_to "#{favorite.item.item_name}", user_item_path(favorite) %></td>
				<td><%= link_to "#{favorite.item.artist.artist_name}", user_artist_path(favorite.item.artist) %></td>
				<td><p>価格（税込）¥：</p><%= (favorite.item.price * 1.1).floor %></td>
                <td>
					<% if favorite.item.favorited_by?(current_user) %>
					    <%= link_to user_item_favorites_path(favorite.item.id), method: :delete do %>
					      <span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
					      <%= favorite.item.favorites.count %>
					    <% end %>
					<% else %>
					    <%= link_to user_item_favorites_path(favorite.item.id), method: :post do %>
					      <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
					      <%= favorite.item.favorites.count %>
					    <% end %>
					<% end %>
                </td>
			</tr>
	</table>
<% end %>

<%= paginate @items, class: "paginate" %>