<% if @contact.errors.any? %>
  <%= @contact.errors.count %>error!
  <% @contact.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h3>お問い合わせページ</h3>

<%= form_for(@contact, url: {controller: 'user/contacts', action: 'create' }) do |f| %>

<div>
  <p class="registrations-headline">【お名前】</p>
  <div class="field row">
    <div class="form col-lg-2">
      <%= f.label :姓 %>
    </div>
    <div class="col-lg-2">
      <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>

  <div class="field row">
    <div class="col-lg-2">
      <%= f.label :名 %>
    </div>
    <div class="col-lg-2">
      <%= f.text_field :first_name, autofocus: true, autocomplete: "name",class:"form-control" %>
    </div>
  </div>
</div>


<div>
  <div class="field row">
    <div class="col-lg-2">
          <%= f.label :セイ %>
    </div>
    <div class="col-lg-2">
          <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
  <div class="field row">
    <div class="col-lg-2">
        <%= f.label :メイ %>
    </div>
    <div class="col-lg-2">
        <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
</div>

  <div>
    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :email %>
      </div>
      <div class="col-lg-5">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>
  </div>

  <div>
    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :電話番号 %>
      </div>
      <div class="col-lg-2">
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "email",class:"form-control" %>
      </div>
    </div>
  <div>
  <h4 class="registrations-headline">お問い合わせ内容</h4>
	<div class="row">
		<div class="col-lg-2"></div>
			<div class="col-lg-6"><%= f.text_area :contact_body, size: "10x10", class: "form-control" %></div>
	</div>
	     <h1 class="contact_new_btn"><%= f.submit '送信', class:"btn  btn-lg btn-primary" %></h1>
<% end %>

