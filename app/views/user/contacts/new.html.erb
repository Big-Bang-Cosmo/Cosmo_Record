
<h3>お問い合わせページ</h3>

<%= form_for(@contact, url: {controller: 'user/contacts', action: 'create' }) do |f| %>
	<h4 class="registrations-headline">お名前</h4>
	    <p class="registrations-headline">姓</p><%= f.text_field :last_name %>
	    <p class="registrations-headline">名</p><%= f.text_field :first_name %>
	<h4 class="registrations-headline">お名前（カタカナ）</h4>
	    <p class="registrations-headline">姓</p><%= f.text_field :last_name_ruby %>
	    <p class="registrations-headline">名</p><%= f.text_field :first_name_ruby %>
	<h4 class="registrations-headline">電話番号</h4>
	    <%= f.text_field :phone_number %>
	<h4 class="registrations-headline">メールアドレス</h4>
	　　　　<%= f.text_field :email %>
	<h4 class="registrations-headline">お問い合わせ内容</h4>
	　　　　<%= f.text_area :contact_body %>
	     <%= f.submit '送信' %>
 <% end %>
