
<h3>お問い合わせページ</h3>

<%= form_for(@contact) do |f| %>
	<h4>お名前</h4>
	    <p>姓</p><%= f.text_field :last_name %>
	    <p>名</p><%= f.text_field :first_name %>
	<h4>お名前（カタカナ）</h4>
	    <p>姓</p><%= f.text_field :last_name_ruby %>
	    <p>名</p><%= f.text_field :first_name_ruby %>
	<h4>電話番号</h4>
	    <%= f.text_field :phone_number %>
	<h4>メールアドレス</h4>
	　　　　<%= f.text_field :email %>
	<h4>お問い合わせ内容</h4>
	　　　　<%= f.text_area :contact_body %>
	     <%= f.submit '送信' %>
 <% end %>
