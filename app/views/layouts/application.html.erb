<!DOCTYPE html>
<html>
  <head>
    <title>CosmoRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track':'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track':'reload' %>
  </head>

  <body>
   <heder>
    <ul class="nav-list clearfix">

      <% if params[:admin] %>
         <li class="nav-list-item">

          <%= form_tag({controller: :items, action: :search},{method: :get}) do %>
            <%= text_field_tag :search, params[:search], placeholder: "商品名" %>
            <%= submit_tag "検索", :name => nil %>
          <% end %>

        </li>


      <% else %>

          <% if user_signed_in? %>
              <li class="nav-list-item">
                <%= link_to "logo", user_items_path %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>   <%= link_to "Home", "" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  <%= link_to "Users", "" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span>  <%= link_to "Books", "" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>  <%= link_to "logout", destroy_user_session_path, method: :delete %>
              </li>
          <% elsif %>
              <% if admin_signed_in? %>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>   <%= link_to "Home", "" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>  <%= link_to "Users", "" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span>  <%= link_to "Books", "" %>
              </li>
              <li class="nav-list-item">
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>  <%= link_to "logout", destroy_user_session_path, method: :delete %>
          <% else %>
            <li class="nav-list-item"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to "Home", "" %></li>
            <li class="nav-list-item"><span class="glyphicon glyphicon-barcode" aria-hidden="true"></span><%= link_to "About", "" %></li>
            <li class="nav-list-item"><a href="/users/sign_up"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>sign up</a></li>
            <li class="nav-list-item"><a href="/users/sign_in"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>login</a></li>
          <% end %>
        </ul>

          <%= form_tag({controller: :items, action: :search},{method: :get}) do %>
              <%= text_field_tag :search, params[:search], placeholder: "商品名" %>
              <%= submit_tag "検索", :name => nil %>
          <% end %>

       <% end %>

      </heder>
    <%= yield %>
  </body>
</html>
