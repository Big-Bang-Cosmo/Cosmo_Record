<h4>
  <b><%= current_user.last_name %><%= current_user.first_name %></b>さんの情報編集</h4>

<div class="row">
  <div class="col-lg-2"></div>
  <div class="col-lg-6">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


  <div>
    <p class="registrations-headline">【お名前】</p>
    <div class="field row">
      <div class="form col-lg-2">
        <%= f.label :姓 %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>

    <div class="field row">
      <div class="col-lg-2">
        <%= f.label :名 %>
      </div>
      <div class="col-lg-10">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "name",class:"form-control" %>
      </div>
    </div>
  </div>


  <div>
    <div class="field row">
      <div class="col-lg-2">
            <%= f.label :セイ %>
      </div>
      <div class="col-lg-10">
            <%= f.text_field :last_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>
    <div class="field row">
      <div class="col-lg-2">
          <%= f.label :メイ %>
      </div>
      <div class="col-lg-10">
          <%= f.text_field :first_name_ruby, autofocus: true, autocomplete: "name", class:"form-control" %>
      </div>
    </div>
  </div>

  <hr>

    <div>
      <div class="field row">
        <div class="col-lg-2">
          <%= f.label :email %>
        </div>
        <div class="col-lg-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>
    </div>

    <div>
      <div class="field row">
        <div class="col-lg-2">
          <%= f.label :電話番号 %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number",class:"form-control" %>
        </div>
      </div>
    <div>

  <div>
      <div class="field row">
            <%= f.fields_for :deliveries do |delivery| %>
              <%= render "delivery_fields", f: delivery %>
            <% end %>
          <div class="links">
            <p><%= link_to_add_association "配送先を追加", f, :deliveries ,class:"btn btn-default" %></p>
          </div>
      </div>
  </div>

  <hr>

  <div class="row">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="field">
          <%= f.label :password %> <i>(変更しない場合は空白のままにしてください)</i><br />
        <div class="form col-lg-8">
            <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
          <% if @minimum_password_length %>
            <em>※<%= @minimum_password_length %> 文字以上で入力してください</em>
          <% end %>
        </div>
     </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :password_confirmation %><i>（確認のため、もう一度入力してください）</i><br />
      <div class="form col-lg-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="field">
          <%= f.label :current_password %> <i>(変更するには現在のパスワードが必要です)</i><br />
      <div class="form col-lg-8">
          <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
      </div>
    </div>
  </div>

    <div class="actions-user-edit">
      <%= f.submit "編集",class:"btn btn-primary" %>
    </div>
  <% end %>

  <hr>

    <div class="row">

    <%= link_to "マイページへ戻る", user_users_favorites_path(current_user.id) %>

    </div>

  </div>


  <div class="col-lg-4"></div>

</div>